<title><%=title%></title>
<link rel="stylesheet" href="/css/material_management.css">

<div id="material-management">
    <% if(locals.user.role == 'builder') { %>
        <form action="/functionality/add_material" method="post">
            <div id="material-name" class="materials">
                <label for="material-name">Material Name</label>
                <input type="text" name="name" id="material-name" placeholder="Material Name">
            </div>
            <div id="material-quantity" class="materials">
                <label for="material-quantity">Material Quantity</label>
                <input type="text" name="quantity" id="material-quantity" placeholder="Material Quantity">
            </div>
            <div id="material-price" class="materials">
                <label for="material-price">Material Price</label>
                <input type="text" name="price" id="material-price" placeholder="Material Price">
            </div>
            <div id="material-description" class="materials">
                <label for="material-description">Material Description</label>
                <input type="text" name="description" id="material-description" placeholder="Material Description">
            </div>
            <div id="material-submit" class="materials">
                <input type="submit" value="Add Material">
            </div>
        </form>
    <% } %>
    <div id="material-list">
        <table>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Description</th>
                <th>Amount</th>
            </tr>
            <% materials.forEach(function(material) { %>
                <tr>
                    <td><%=material.name%></td>
                    <td><%=material.quantity%></td>
                    <td><%=material.price%></td>
                    <td><%=material.description%></td>
                    <td><%=material.amount%></td>
                </tr>
            <% }) %>
        </table>
</div>