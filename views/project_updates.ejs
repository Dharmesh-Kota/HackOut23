<link rel="stylesheet" href="/css/project_updates.css">

<div id="project-updates-container">
    <h2>Builder Upload Project Updates Here</h2> <!-- Added title section -->
    <%if(locals.user.role == 'builder') {%>
        <form action="/project/update" method="post" enctype="multipart/form-data">
            
            <input type="hidden" id="project_name" name="project_name" value="<%=project.name%>"> <br>
        
            <label for="mode">Enter Mode</label>
            <input type="text" id="mode" name="mode" placeholder="public/private"> <br>

            <label for="description">Description</label>
            <textarea placeholder="Enter small description of project" id="description" name="description" cols="50" rows="4">
            </textarea> <br>
        
            <label for="image">Project Banner</label>
            <input type="file" name="image" id="image" placeholder="Project Update"> <br>
        
            <button type="submit">Add Project</button>
        </form>
    <% } %>
    
    <h2>Project Updates</h2>
    <ul id="images-container">

        <%for(update of updates) {%>
            <li id="update-<%=update._id%>" class="update-images">
                <p>
                    <%= update.description %>
                    <br>
                    <small>
                        Date: <%=(update.createdAt).toDateString()%>
                        Time: <%= (update.createdAt).toTimeString()%>
                    </small>
                </p>
                <img src="<%=update.image%>" alt="Project Image" height="300" width="500">
            </li>
        <% } %>

    </ul>
</div>