<title><%=title%></title>
<link rel="stylesheet" href="/css/portfolio.css">

<ul id="projects-container">
    
    <% for (project of projects) {%>
        <li id="<%=project.id%>" class="projects-list">
            <div class="project">
                <div class="project-image">
                    <a href="/functionality/project-description/<%=project.id%>"><img src="<%=project.avatar%>" alt="Project Image" height="300" width="500"></a>
                </div>
                <div class="project-details">
                    <div class="project-name">
                        <a href="/functionality/project-description/<%=project.id%>"><%=project.name%></a>
                    </div>
                    <div class="project-budget">
                        <%=project.budget%>
                    </div>
                    <div class="project-location">
                        <%=project.location%>
                    </div>
                </div>
            </div>
        </li>
    <% } %>
    
</ul>